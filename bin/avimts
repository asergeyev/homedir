#!/bin/sh

## recoding my camcorder videos
[ -z $1 ] && exit
[ -f $1 ] || exit
IN=$1
OUT=`perl -e '\$_=shift; chomp; s/\\..*$/.avi/; print lc \$_' $IN`;
OPT="vbitrate=14000000"
mencoder $IN -demuxer lavf -lavdopts threads=3:fast:skiploopfilter=all -ovc lavc -vf pp=fd,scale=960:540,hue=0:1.5 -lavcopts vcodec=msmpeg4v2:$OPT -oac mp3lame -lameopts preset=64 -o /mnt/Turf/$OUT
