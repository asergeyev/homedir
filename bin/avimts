#!/bin/sh

## converting my camcorder videos
[ -z $1 ] && exit
[ -f $1 ] || exit
IN=$1
OUT=`perl -e '\$_=shift; chomp; s/\\..*$/.avi/; print lc \$_' $(basename $IN)`;

ffmpeg -i $IN -acodec libmp3lame -ab 192k \
              -s 960x540 \
              -q:v 10 \
              -y /mnt/Turf/$OUT

touch -r $IN /mnt/Turf/$OUT
